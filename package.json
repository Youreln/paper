{
  "name": "filefly",
  "version": "1.0.0",
  "description": "飞传 FileFly - 局域网高速文件传输工具",
  "main": "index.js",
  "author": "Youreln",
  "license": "MIT",
  "homepage": "https://youreln.github.io/FileFly",
  "repository": {
    "type": "git",
    "url": "https://github.com/Youreln/FileFly"
  },
  "keywords": [
    "file-transfer",
    "lan",
    "local-network",
    "upload",
    "download",
    "filefly",
    "electron"
  ],
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build:win": "npm run build:prepare && electron-builder --win --x64",
    "build:mac": "npm run build:prepare && electron-builder --mac",
    "build:linux": "npm run build:prepare && electron-builder --linux",
    "build:all": "npm run build:prepare && electron-builder -wml",
    "build:prepare": "node scripts/build-prepare.js"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.youreln.filefly",
    "productName": "飞传 FileFly",
    "copyright": "Copyright © 2026 Youreln",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!release/**",
      "!docs/**",
      "!.github/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "飞传 FileFly"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
